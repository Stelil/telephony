<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:minLines="2"
        android:onClick="onButtonCheckTimeCallback"
        android:padding="5dp"
        android:text="Время за которое оповещать о звонке"
        android:textColor="#000"
        android:textSize="18dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#848484" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:onClick="onButtonCheckTimeCall"
        android:padding="5dp"
        android:text="Время с которого начинать запоминать время разговора"
        android:textColor="#000"
        android:textSize="18dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#848484" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:onClick="onButtonPwd"
        android:padding="5dp"
        android:minLines="2"
        android:text="Поменять пароль"
        android:textColor="#000"
        android:textSize="18dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#848484" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical" />

</LinearLayout>