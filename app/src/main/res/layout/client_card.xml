<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:id="@+id/cv"
        android:background="#fff"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:layout_alignParentTop="true"
                android:text="NAME"
                android:textSize="25sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_phone"
                android:layout_below="@+id/person_name"
                android:text="89999999999"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="COOOOLD"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_status"
                android:layout_below="@+id/person_label"
                android:layout_alignParentRight="true"
                android:text="ПРОСЧЁТ"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_manager"
                android:layout_below="@+id/person_status"
                android:layout_alignParentRight="true"
                android:text="MANAGER"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>