<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Перезвон"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:textColor="#fff"
                android:onClick="onButtonRecall"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/countCallback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@id/relative1"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_menu_cart"
            android:gravity="center"
            android:textColor="#ffffff"
            android:visibility="gone"/>

    </RelativeLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Клиенты"
        android:background="@drawable/rounded_button"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClients"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Аналитика"
        android:background="@drawable/rounded_button"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:onClick="onButtonAnalytics"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Настройки"
        android:background="@drawable/rounded_button"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:onClick="onButtonSettings"/>

</LinearLayout>