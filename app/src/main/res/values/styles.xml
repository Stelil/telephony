    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_style_spisok">
        <item name="android:textColor">#414099</item>
    </style>

    <style name="background">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="text_style">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="themeWhite" parent="Theme.AppCompat.Light" >
        <item name="colorAccent">@color/colorBlueDark</item>
